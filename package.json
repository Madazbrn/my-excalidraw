{
  "name": "my-excalidraw",
  "productName": "My Excalidraw",
  "description": "A modern, feature-rich Excalidraw desktop application with workspace management",
  "version": "0.1.2",
  "private": true,
  "type": "module",
  "author": {
    "name": "xiaotianxt",
    "email": "me@xiaotian.dev"
  },
  "license": "MIT",
  "homepage": "https://github.com/xiaotianxt/my-excalidraw",
  "repository": {
    "type": "git",
    "url": "https://github.com/xiaotianxt/my-excalidraw.git"
  },
  "bugs": {
    "url": "https://github.com/xiaotianxt/my-excalidraw/issues"
  },
  "keywords": [
    "excalidraw",
    "drawing",
    "electron",
    "react",
    "typescript",
    "workspace",
    "desktop-app"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder --publish=never",
    "build:dir": "tsc && vite build && electron-builder --dir",
    "build:win": "tsc && vite build && electron-builder --win",
    "build:mac": "tsc && vite build && electron-builder --mac",
    "build:linux": "tsc && vite build && electron-builder --linux",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "type-check": "tsc --noEmit",
    "preview": "vite preview",
    "release": "./scripts/release.sh",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@excalidraw/excalidraw": "^0.18.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.13",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.21",
    "electron": "^30.0.1",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.13",
    "typescript": "^5.2.2",
    "vite": "^5.1.6",
    "vite-plugin-electron": "^0.28.6",
    "vite-plugin-electron-renderer": "^0.14.5"
  },
  "main": "dist-electron/main.js"
}
